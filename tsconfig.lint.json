{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ""
  },
  "include": [
    "client/src/**/*",
    "server/src/**/*",
    "client/tests/**/*",
    "server/tests/**/*",
    "eslint.config.mjs",
    ".vscode-test.js",
    ".vscode-test.mjs"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "out",
    "client/out",
    "server/out",
    "sampleWorkspace"
  ]
}